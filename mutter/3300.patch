+                                                                    &error);
+  MetaWaylandSyncobjTimeline *syncobj_timeline;
+  struct wl_resource *timeline_resource;
+
+  close(drm_syncobj_fd);
+  if (!drm_timeline)
+    {
+      wl_resource_post_error (resource, WP_LINUX_DRM_SYNCOBJ_V1_ERROR_INVALID_TIMELINE,
